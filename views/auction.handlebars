<section class="home-header">
    <h1>Welcome to Aurora Auction</h1>
    <p>Your premier destination for online auctions</p>
</section>

<h1>Available Auction Items</h1>
<div id="items-list">
  {{#each items}}
    <div class="item">
      <h2>{{this.name}}</h2>
      <img src="{{this.image}}" alt="{{this.name}}" width="200">
      <p>Description: {{this.description}}</p>
      <p>Price: ${{this.price}}</p>
      <p>Status: {{this.status}}</p>
      <button class="bid-button" data-id="{{this.id}}">Place Bid</button>
    </div>
  {{/each}}
</div>

<h2>Launch New Item</h2>
<form id="add-item-form" enctype="multipart/form-data">
  <input type="text" id="name" name="name" placeholder="Item Name" required>
  <textarea id="description" name="description" placeholder="Item Description" required></textarea>
  <input type="number" id="price" name="price" placeholder="Price" required>
  <input type="text" id="status" name="status" placeholder="Status" required>
  <input type="file" id="image" name="image" accept="image/*" required>
  <button type="submit">Add Item</button>
</form>

<script src="/js/script.js"></script>

